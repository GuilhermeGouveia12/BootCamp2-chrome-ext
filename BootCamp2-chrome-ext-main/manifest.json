{
  "manifest_version": 3,
  "name": "Random Page Helper",
  "version": "1.0.0",
  "description": "Abre uma página aleatória de sites educativos e de curiosidades.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Random Page Helper",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
